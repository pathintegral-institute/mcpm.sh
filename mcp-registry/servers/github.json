{
  "name": "github-mcp-server",
  "display_name": "GitHub MCP Server",
  "description": "GitHub's official MCP Server for interacting with GitHub repositories, issues, pull requests, and more.",
  "repository": {
    "type": "git",
    "url": "https://github.com/github/github-mcp-server"
  },
  "homepage": "https://github.com/github/github-mcp-server",
  "author": {
    "name": "GitHub"
  },
  "license": "MIT",
  "categories": [
    "Dev Tools",
    "Professional Apps"
  ],
  "tags": [
    "github",
    "git",
    "repositories",
    "issues",
    "pull-requests",
    "api",
    "model-context-protocol"
  ],
  "installations": {
    "npm": {
      "type": "npm",
      "command": "npx",
      "args": [
        "-y",
        "@github/github-mcp-server"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "Using npm to run the GitHub MCP server",
      "recommended": true
    }
  },
  "arguments": {
    "GITHUB_TOKEN": {
      "description": "GitHub personal access token for authentication",
      "required": true,
      "example": "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
    }
  },
  "tools": [
    {
      "name": "create_repository",
      "description": "Create a new GitHub repository",
      "inputSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Repository name"
          },
          "description": {
            "type": "string",
            "description": "Repository description"
          },
          "private": {
            "type": "boolean",
            "description": "Whether the repository should be private"
          }
        },
        "required": ["name"]
      }
    },
    {
      "name": "get_repository",
      "description": "Get repository information",
      "inputSchema": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          }
        },
        "required": ["owner", "repo"]
      }
    },
    {
      "name": "list_issues",
      "description": "List issues in a repository",
      "inputSchema": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "state": {
            "type": "string",
            "description": "Issue state (open, closed, all)"
          }
        },
        "required": ["owner", "repo"]
      }
    },
    {
      "name": "create_issue",
      "description": "Create a new issue",
      "inputSchema": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "title": {
            "type": "string",
            "description": "Issue title"
          },
          "body": {
            "type": "string",
            "description": "Issue body"
          }
        },
        "required": ["owner", "repo", "title"]
      }
    },
    {
      "name": "list_pull_requests",
      "description": "List pull requests in a repository",
      "inputSchema": {
        "type": "object",
        "properties": {
          "owner": {
            "type": "string",
            "description": "Repository owner"
          },
          "repo": {
            "type": "string",
            "description": "Repository name"
          },
          "state": {
            "type": "string",
            "description": "Pull request state (open, closed, all)"
          }
        },
        "required": ["owner", "repo"]
      }
    }
  ],
  "examples": [
    {
      "title": "Create repository",
      "description": "Create a new GitHub repository",
      "prompt": "Create a new public repository called 'my-awesome-project'"
    },
    {
      "title": "List issues",
      "description": "List all open issues in a repository",
      "prompt": "Show me all open issues in the microsoft/vscode repository"
    },
    {
      "title": "Create issue",
      "description": "Create a new issue in a repository",
      "prompt": "Create a bug report for the login functionality in my repository"
    },
    {
      "title": "List pull requests",
      "description": "List pull requests in a repository",
      "prompt": "Show me all open pull requests in the facebook/react repository"
    }
  ],
  "is_official": true
}