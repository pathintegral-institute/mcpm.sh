{
  "name": "@nitansde/mcp",
  "display_name": "Nitan MCP",
  "description": "The Nitan Master Control Program (MCP) is a versatile server that enhances the capabilities of Large Language Models (LLMs) by providing them with access to a wide range of tools and functionalities.",
  "repository": {
    "type": "git",
    "url": "https://github.com/nitansde/nitan-mcp"
  },
  "author": {
    "name": "nitansde"
  },
  "license": "Apache-2.0",
  "categories": [
    "AI Systems",
    "Dev Tools",
    "MCP Tools"
  ],
  "tags": [
    "mcp",
    "ai",
    "tools"
  ],
  "arguments": {
    "NITAN_USERNAME": {
      "description": "Username for authentication.",
      "required": true
    },
    "NITAN_PASSWORD": {
      "description": "Password for authentication.",
      "required": true
    },
    "TIME_ZONE": {
      "description": "Optional timezone to use, defaults to local clock.",
      "required": false,
      "example": "America/New_York"
    },
    "python_path": {
      "description": "Path to the python executable if it is installed in a virtual environment.",
      "required": false,
      "example": "/path/to/python_executable"
    }
  },
  "installations": {
    "npm": {
      "type": "npm",
      "package": "@nitansde/mcp",
      "command": "npx",
      "args": [
        "-y",
        "@nitansde/mcp@latest"
      ],
      "recommended": true,
      "description": "Run the MCP server using npx, the recommended method for quick setup.",
      "env": {
        "NITAN_USERNAME": "YOUR_USERNAME",
        "NITAN_PASSWORD": "YOUR_PASSWORD",
        "TIME_ZONE": "America/New_York"
      }
    }
  },
  "is_archived": false,
  "is_official": false
}