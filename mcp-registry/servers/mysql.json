{
  "name": "mysql",
  "display_name": "MySQL Database Integration",
  "description": "MySQL database integration providing schema discovery and read-only query execution with secure database access",
  "repository": {
    "type": "git",
    "url": "https://github.com/melio/mysql-mcp-server"
  },
  "homepage": "https://github.com/melio/mysql-mcp-server",
  "author": {
    "name": "Melio"
  },
  "license": "MIT",
  "categories": ["Databases"],
  "tags": ["MySQL", "Database Access"],
  "installations": {
    "custom": {
      "type": "custom",
      "command": "~/.mcpm/clone-install-run.sh",
      "args": [],
      "env": {
        "MYSQL_CONNECTION_STRING": "${MYSQL_CONNECTION_STRING}",
        "MCP_REPO_URL": "git+ssh://git@github.com/melio/mysql-mcp-server.git",
        "MCP_SETUP_COMMAND": "npm install && npm run build",
        "MCP_RUN_COMMAND": "node build/index.js"
      },
      "description": "Clone, build, and run the MySQL MCP server using clone-install-run.sh",
      "recommended": true
    }
  },
  "arguments": {
    "MYSQL_CONNECTION_STRING": {
      "description": "MySQL connection string in the format mysql://username:password@hostname:port/database",
      "required": true,
      "example": "mysql://root:password@localhost:3306/mydb"
    }
  },
  "tools": [
    {
      "name": "query",
      "description": "Run a read-only SQL query against the MySQL database",
      "inputSchema": {
        "type": "object",
        "properties": {
          "sql": {
            "type": "string",
            "description": "The SQL query to execute (read-only)"
          }
        },
        "required": ["sql"]
      }
    }
  ]
}
