{
  "name": "mcp-atlassian",
  "display_name": "Atlassian MCP Server",
  "description": "Model Context Protocol (MCP) server for Atlassian products (Confluence and Jira). This integration supports both Confluence & Jira Cloud and Server/Data Center deployments.",
  "repository": {
    "type": "git",
    "url": "https://github.com/melio/mcp-atlassian"
  },
  "homepage": "https://github.com/melio/mcp-atlassian",
  "author": {
    "name": "melio"
  },
  "license": "MIT",
  "categories": [
    "Professional Apps",
    "Productivity"
  ],
  "tags": [
    "atlassian",
    "jira",
    "confluence",
    "api",
    "model-context-protocol",
    "integration"
  ],
  "installations": {
    "uvx": {
      "type": "uvx",
      "command": "uvx",
      "args": [
        "mcp-atlassian"
      ],
      "env": {
        "JIRA_API_TOKEN": "${JIRA_API_TOKEN}",
        "JIRA_USERNAME": "${JIRA_USERNAME}",
        "JIRA_INSTANCE_URL": "${JIRA_INSTANCE_URL}"
      },
      "description": "Using uvx to run the Atlassian MCP server",
      "recommended": true
    },
    "custom": {
      "type": "custom",
      "command": "git",
      "args": [
        "clone",
        "https://github.com/melio/mcp-atlassian.git",
        "&&",
        "cd",
        "mcp-atlassian",
        "&&",
        "pip",
        "install",
        "-e",
        ".",
        "&&",
        "python",
        "-m",
        "mcp_atlassian"
      ],
      "env": {
        "JIRA_API_TOKEN": "${JIRA_API_TOKEN}",
        "JIRA_USERNAME": "${JIRA_USERNAME}",
        "JIRA_INSTANCE_URL": "${JIRA_INSTANCE_URL}"
      },
      "description": "Install and run from GitHub repository"
    }
  },
  "arguments": {
    "JIRA_API_TOKEN": {
      "description": "Jira API token for authentication",
      "required": true,
      "example": "your-jira-api-token"
    },
    "JIRA_USERNAME": {
      "description": "Jira username (email address)",
      "required": true,
      "example": "user@example.com"
    },
    "JIRA_INSTANCE_URL": {
      "description": "Jira instance URL",
      "required": true,
      "example": "https://your-domain.atlassian.net"
    }
  },
  "tools": [
    {
      "name": "jira_search",
      "description": "Search Jira issues using JQL (Jira Query Language)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "jql": {
            "type": "string",
            "description": "JQL query string"
          },
          "fields": {
            "type": "string",
            "description": "Comma-separated fields to return"
          },
          "limit": {
            "type": "integer",
            "description": "Maximum number of results"
          }
        },
        "required": ["jql"]
      }
    },
    {
      "name": "jira_get_issue",
      "description": "Get details of a specific Jira issue",
      "inputSchema": {
        "type": "object",
        "properties": {
          "issue_key": {
            "type": "string",
            "description": "Jira issue key (e.g., 'PROJ-123')"
          }
        },
        "required": ["issue_key"]
      }
    },
    {
      "name": "jira_create_issue",
      "description": "Create a new Jira issue",
      "inputSchema": {
        "type": "object",
        "properties": {
          "project_key": {
            "type": "string",
            "description": "The JIRA project key"
          },
          "summary": {
            "type": "string",
            "description": "Summary/title of the issue"
          },
          "issue_type": {
            "type": "string",
            "description": "Issue type (e.g., 'Task', 'Bug', 'Story')"
          },
          "description": {
            "type": "string",
            "description": "Issue description"
          }
        },
        "required": ["project_key", "summary", "issue_type"]
      }
    }
  ],
  "examples": [
    {
      "title": "Search for issues",
      "description": "Search for Jira issues using JQL",
      "prompt": "Search for all open issues assigned to me"
    },
    {
      "title": "Get issue details",
      "description": "Get detailed information about a specific Jira issue",
      "prompt": "Get details for issue PROJ-123"
    },
    {
      "title": "Create new issue",
      "description": "Create a new Jira issue",
      "prompt": "Create a new bug report for the login functionality"
    }
  ]
}