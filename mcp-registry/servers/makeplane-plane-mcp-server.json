{
  "name": "@makeplane/plane-mcp-server",
  "display_name": "Plane MCP Server",
  "description": "The Plane MCP Server brings the power of Model Context Protocol (MCP) to Plane, allowing AI agents and developer tools to interact programmatically with your Plane workspace.",
  "repository": {
    "type": "git",
    "url": "https://github.com/makeplane/plane-mcp-server"
  },
  "homepage": "https://github.com/makeplane/plane-mcp-server#readme",
  "author": {
    "name": "Plane",
    "email": "engineering@plane.so"
  },
  "license": "MIT",
  "categories": [
    "MCP Tools",
    "Dev Tools"
  ],
  "tags": [
    "plane",
    "mcp",
    "ai"
  ],
  "arguments": {
    "PLANE_API_KEY": {
      "description": "Your Plane API token. You can generate one from the Workspace Settings > API Tokens page (`/settings/api-tokens/`) in the Plane app.",
      "required": true
    },
    "PLANE_WORKSPACE_SLUG": {
      "description": "The workspace slug for your Plane instance. The workspace-slug represents the unique workspace identifier for a workspace in Plane. It can be found in the URL.",
      "required": true
    },
    "PLANE_API_HOST_URL": {
      "description": "The host URL of the Plane API Server. Defaults to https://api.plane.so/",
      "required": false,
      "example": "https://api.plane.so/"
    }
  },
  "tools": [
    {
      "name": "get_user",
      "description": "Get the current user's information"
    },
    {
      "name": "get_projects",
      "description": "Get all projects for the current user"
    },
    {
      "name": "create_project",
      "description": "Create a new project",
      "required": [
        "name"
      ],
      "inputSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Project name"
          }
        }
      }
    },
    {
      "name": "create_issue",
      "description": "Create a new issue",
      "required": [
        "project_id",
        "issue_data"
      ],
      "inputSchema": {
        "type": "object",
        "properties": {
          "project_id": {
            "type": "string",
            "description": "UUID of the project"
          },
          "issue_data": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Title of the issue"
              },
              "description_html": {
                "type": "string",
                "description": "HTML description of the issue"
              }
            },
            "required": [
              "name",
              "description_html"
            ]
          }
        }
      }
    }
  ],
  "installations": {
    "uvx": {
      "type": "uvx",
      "command": "uvx",
      "args": [
        "plane-mcp-server",
        "stdio"
      ],
      "env": {
        "PLANE_API_KEY": "<your-api-key>",
        "PLANE_WORKSPACE_SLUG": "<your-workspace-slug>",
        "PLANE_BASE_URL": "https://api.plane.so"
      },
      "description": "Run the server using uvx for local development. This is the recommended method.",
      "recommended": true
    }
  },
  "is_official": true,
  "is_archived": false
}